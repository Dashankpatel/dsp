<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Continue">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:background="#000000">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gameplaybackground" />

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="skip,level,hint"
            app:flow_horizontalGap="15dp"
            app:flow_wrapMode="chain2"
            app:layout_constraintBottom_toBottomOf="@+id/level"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/skip"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/skip"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/level"
            app:layout_constraintStart_toStartOf="@+id/flow" />

        <ImageView
            android:id="@+id/level"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/level_board"
            app:layout_constraintBottom_toTopOf="@+id/imageView"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@+id/flow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <ImageView
            android:id="@+id/hint"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/hint"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@+id/flow"
            app:layout_constraintStart_toEndOf="@+id/level" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/flow" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.4"
        android:orientation="vertical"
        android:background="#000000">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/anstext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textColor="#000000"/>
            <Button
                android:id="@+id/remove"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1.8"
                android:background="@drawable/delete"/>
            <Button
                android:id="@+id/sub"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="SUBMIT"
                android:layout_weight="1.6"
                android:background="#000000"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                style="@style/btn"
                android:id="@+id/one"
                android:text="1"/>
            <Button
                style="@style/btn"
                android:id="@+id/two"
                android:text="2"/>
            <Button
                style="@style/btn"
                android:id="@+id/three"
                android:text="3"/>
            <Button
                style="@style/btn"
                android:id="@+id/four"
                android:text="4"/>
            <Button
                style="@style/btn"
                android:id="@+id/five"
                android:text="5"/>
            <Button
                style="@style/btn"
                android:id="@+id/six"
                android:text="6"/>
            <Button
                style="@style/btn"
                android:id="@+id/seven"
                android:text="7"/>
            <Button
                style="@style/btn"
                android:id="@+id/eight"
                android:text="8"/>
            <Button
                style="@style/btn"
                android:id="@+id/nine"
                android:text="9"/>
            <Button
                style="@style/btn"
                android:id="@+id/zero"
                android:text="0"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>